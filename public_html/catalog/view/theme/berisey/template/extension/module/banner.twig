

<section id="banner{{ module }}" class="flex w-full sticky top-[calc(var(--header-nav-height))] bottom-0  h-[460px] xl-mobile:h-[50vw] md:h-[460px] main-bg-linear z-10">
	<div class="!hidden text-2xl font-extrabold text-lightBlack xl-mobile:text-[5vw] md:text-[clamp(2.5rem,_5vw,_3rem)] leading-[1.1] md:leading-none text-center xl-mobile:text-start bg-clip-text text-transparent bg-gradient-to-r from-lightGreen to-darkGreen"></div>
	<div class="swiper h-full md:max-w-7xl" 
		x-data="{ swiper: null }" 
		x-ref="mainBanner"
		x-init="swiper = new Swiper($refs.mainBanner, {effect: 'fade',fadeEffect: {crossFade: true},speed: 1000,autoplay: {delay: 5000,pauseOnMouseEnter: true},loop: true,keyboard: true})">
		<div class="swiper-wrapper h-full">
			{% for banner in banners %}
				<div class="swiper-slide w-full relative h-auto">
		
					<div class="grid h-full grid-rows-2 grid-cols-1 xl-mobile:grid-cols-12 xl-mobile:grid-rows-1 md:gap-4 p-6 gap-3">

						<div class="flex flex-col p-3 justify-evenly xl-mobile:col-span-7 gap-4" x-data="{link: '{{ banner.link }}'}">
							
							{{ banner.content }}

							<div class="w-full inline-flex justify-center xl-mobile:justify-start" x-show="link">
								<a :href="link" class="text-white bg-gradient-to-r from-lightGreen to-darkGreen hover:scale-110 focus:ring-4 focus:bg-darkGreen font-medium rounded-md text-base p-3 xl-notebook:p-5 focus:outline-none">
									Узнать подробнее
								</a>
							</div>

						</div>
						{% if banner.image %}
							<div class="relative justify-center flex w-full xl-mobile:col-span-5 md:p-0 md:h-full md:max-w-full md:max-h-full">
								<picture class="flex justify-center h-full object-contain image-reflect">
									<source srcset="{{banner.image}}" type="image/webp" />
									<img src="{{banner.image}}" alt="{{banner.title}}"/>
								</picture>
							</div>
						{% endif %}
						


					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>