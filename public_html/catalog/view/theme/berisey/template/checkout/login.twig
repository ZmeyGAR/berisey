
<div class="p-4 rounded-lg bg-lightBlue flex flex-col" id="checkout-login-content" role="tabpanel">
  <h4 class="block text-lightBlack text-base font-bold sm-mobile:text-2xl xl-notebook:text-3xl pb-6 last:pb-0">
      <span class="line-clamp-2">{{heading_login}}</span>
  </h4>

  <div class="flex flex-col flex-1">
    <div class="grid w-full 
      grid-cols-[repeat(auto-fit,_minmax(16rem,1fr))] 
      xl-mobile:grid-cols-[repeat(auto-fit,_minmax(17rem,1fr))] 
      md:grid-cols-[repeat(auto-fit,_minmax(20rem,1fr))] 
      xl:grid-cols-[repeat(auto-fit,_minmax(17rem,1fr))] 
      divide-y-2 gap-6 
      sm:divide-y-0 sm:divide-x-2 *:py-6 *:sm:py-0 *:md:py-6 *:xl:py-0
      md:divide-x-0 md:divide-y-2 
      xl:divide-y-0 xl:divide-x-2 xl:gap-12">
      <div class="w-full h-full flex flex-col">
        <h2 class="block text-lightBlack text-base font-bold sm-mobile:text-2xl xl-notebook:text-xl pb-6 last:pb-0">
          <span class="line-clamp-2">{{ text_new_customer }}</span>
          <p class="text-sm font-normal">{{ text_checkout }}</p>
        </h2>

        <div class="flex flex-col gap-3">
            <div class="flex gap-3 flex-wrap">
              <div class="flex items-center ps-4 border border-gray-200 rounded-lg w-full flex-auto max-w-max has-[:checked]:border-darkGreen has-[:checked]:focus:ring-darkGreen">
                <input id="register-radio-1" type="radio" 
                  name="account" 
                  value="register" 
                  {% if account == 'register' %} checked="checked" {% endif %}
                  class="w-4 h-4 text-lightGreen bg-lightBlue border-lightGreen focus:ring-darkGreen">
                <label for="register-radio-1" class="w-full p-4 pl-0 ms-2 text-sm font-medium text-lightBlack">{{ text_register }}</label>
              </div>
              {% if checkout_guest %}
                <div class="flex items-center ps-4 border border-gray-200 rounded-lg w-full flex-auto max-w-max has-[:checked]:border-darkGreen has-[:checked]:focus:ring-darkGreen">
                  <input id="register-radio-2" type="radio" 
                    name="account" 
                    value="guest"
                    {% if account == 'guest' %} checked="checked" {% endif %}
                    class="w-4 h-4 text-lightGreen bg-lightBlue border-lightGreen focus:ring-darkGreen">
                  <label for="register-radio-2" class="w-full p-4 pl-0 ms-2 text-sm font-medium text-lightBlack">{{ text_guest }}</label>
                </div>
              {% endif %}
            </div>

            <div class="p-4 border border-lightGray rounded-lg bg-gray-50" role="alert">
              <div class="mt-2 mb-4 text-sm text-lightGray">
                <div class="flex items-center float-left">
                  <svg class="shrink-0 w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>
                  </svg>
                  <span class="sr-only">Info</span>
                </div>
                {{ text_register_account }}
              </div>
            </div>
            <div id="button-account-action">
              <input type="button" value="{{ button_continue }}" id="button-account" class="w-full text-white bg-gradient-to-r from-darkGreen to-lightGreen cursor-pointer focus:ring-4 focus:bg-darkGreen font-medium rounded-md text-base p-3 xl-notebook:p-5 focus:outline-none" />
            </div>
        </div>
      </div>

      <div class="w-full h-full flex flex-col sm:pl-6 md:px-0 xl:pl-12">
          <h2 class="block text-lightBlack text-base font-bold sm-mobile:text-2xl xl-notebook:text-xl pb-6 last:pb-0">
            <span class="line-clamp-2">{{ text_returning_customer }}</span>
            <p class="text-sm font-normal">{{ text_i_am_returning_customer }}</p>
          </h2>

          <div class="flex flex-col gap-3 h-full">
            <div class="group form-group">
              <label for="input-email" class="block mb-2 text-sm font-medium">{{ entry_email }}</label>
              <input type="text" name="email" value="" placeholder="{{ entry_email }}" id="input-email" autocomplete="email"
                class="bg-white border border-lightGreen text-lightBlack placeholder-lightBlack text-sm rounded-lg focus:ring-lightGreen focus:border-darkGreen block w-full p-2.5
                [&.has-error]:text-red-600 peer">
            </div>
            <div class="group form-group">
              <label for="input-password" class="block mb-2 text-sm font-medium">{{entry_password}}</label>
              <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" autocomplete="none" aria-autocomplete="inline"
                class="block w-full p-2.5 bg-white border border-lightGreen text-lightBlack placeholder-lightBlack text-sm rounded-lg 
                focus:ring-lightGreen focus:border-darkGreen 
                  [&.has-error]:focus:red-600 [&.has-error]:focus:border-red-600 
                [&.has-error]:text-red-600 peer">
            </div>


            <div id="button-login-action" class="flex flex-col flex-1 gap-3 items-end justify-between">
                  <a href="{{ forgotten }}" class="font-medium text-darkGreen hover:text-lightGreen underline">{{ text_forgotten }}</a>
                  <input type="button" 
                    id="button-login"
                    value="{{ button_login }}"
                    class="w-full text-white bg-gradient-to-r from-lightGreen to-darkGreen focus:ring-4 focus:bg-darkGreen font-medium rounded-md text-base p-3 xl-notebook:p-5 focus:outline-none cursor-pointer" />
            </div>
          </div>
      </div>

    </div>
  </div>


</div>

